import random
import sys


class Person:

    def __init__(self, name=str, hp=int, attack=int):
        self.name = name
        self.hp = hp
        self.attack = attack

    def attack_other(self, other):

        print(f'–•–æ–¥ {self.name}, –±—Ä–æ—Å–∞–µ–º –∫–æ—Å—Ç–∏...')
        a = [random.randint(1, 6), random.randint(1, 6)]
        print(f'–í—ã–ø–∞–ª–æ: {a[0]} –∏ {a[1]}, –≤ —Å—É–º–º–µ: {sum(a)}')
        print(f'{other.name}, –±—Ä–æ—Å–∞–µ—Ç –∫–æ—Å—Ç–∏...')
        b = [random.randint(1, 6), random.randint(1, 6)]
        print(f'–í—ã–ø–∞–ª–æ: {b[0]} –∏ {b[1]}, –≤ —Å—É–º–º–µ: {sum(b)}')
        if sum(a) > sum(b):
            print(f'{self.name} —Å–æ–≤–µ—Ä—à–∞–µ—Ç —É—Å–∏–ª–µ–Ω–Ω—É—é –∞—Ç–∞–∫—É!')
            other.hp -= self.attack + (sum(a) - sum(b)) * 10
        else:
            print(f'{self.name} —Å–æ–≤–µ—Ä—à–∞–µ—Ç –æ–±—ã—á–Ω—É—é –∞—Ç–∞–∫—É.')
            other.hp -= self.attack
        print(f'–£ {other.name} –æ—Å—Ç–∞–ª–æ—Å—å {other.hp}—Ö–ø!')
        if other.hp <= 0:
            print(f'{other.hp} - –ü—Ä–æ–∏–≥—Ä–∞–ª! –ü–æ–±–µ–¥–∞ –¥–æ—Å—Ç–∞–µ—Ç—Å—è {self.name}!!!')
            return

    def info(self):
        return f'-----------\n–ò–º—è –ø–µ—Ä—Å–æ–Ω–∞–∂–∞: {self.name}\n–£—Ä–æ–Ω: {self.attack}\n–•–ø: {self.hp}\n-----------\n'


class Knight(Person):

    def __init__(self, name, hp=float, attack=float):
        super().__init__(name, hp, attack)
        self.object = object

    def bag(self):
        if self.object == 'hill':
            self.hp += 100
            self.object = None
        elif self.object == 'damage':
            self.attack += 100
            self.object = None


class Dragon(Person):

    def __init__(self, level=int, name=str, hp=float, attack=float):
        super().__init__(name, hp, attack)
        self.level = level

    def attack_dragon(self, other):

        print(f'–•–æ–¥ {other.name}, –±—Ä–æ—Å–∞–µ–º –∫–æ—Å—Ç–∏...')
        a = [random.randint(1, 6), random.randint(1, 6)]
        print(f'–í—ã–ø–∞–ª–æ: {a[0]} –∏ {a[1]}, –≤ —Å—É–º–º–µ: {sum(a)}')
        print(f'–î—Ä–∞–∫–æ–Ω, –≤–∑–º–∞—Ö–∏–≤–∞–µ—Ç –∫—Ä—ã–ª—å—è–º–∏...')
        b = [random.randint(100, 1000), random.randint(100, 1000)]
        print(f'–í—ã–ø–∞–ª–æ: {b[0]} –∏ {b[1]}, –≤ —Å—É–º–º–µ: {sum(b)}')
        if sum(a) < sum(b):
            print(f'–î—Ä–∞–∫–æ–Ω —Å–æ–≤–µ—Ä—à–∞–µ—Ç –∞—Ç–∞–∫—É!')
            other.hp -= self.attack + (sum(b) - sum(a)) * 10
        print()


# –Ω–∞—á–∞–ª–æ –∏–≥—Ä—ã

# —Å–æ–∑–¥–∞–Ω–∏–µ –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
name_first = input('–ù–∞–ø–∏—à–∏—Ç–µ –∏–º—è –≤–∞—à–µ–≥–æ –≥–µ—Ä–æ—è: ').capitalize()
hp = int(input('–ö–∞–∫–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ö–ø —É –Ω–µ–≥–æ –±—É–¥–µ—Ç (—Å–æ–≤–µ—Ç—É–µ–º –≤—ã–±–∏—Ä–∞—Ç—å –æ–ø—Ç–∏–º–∞–ª—å–Ω–æ–µ —á–∏—Å–ª–æ –æ—Ç 500 –¥–æ 2000): '))
attack = int(input('–ö–∞–∫–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —É—Ä–æ–Ω–∞ –≤–∞—à –ø–µ—Ä—Å–æ–Ω–∞–∂ –±—É–¥–µ—Ç –Ω–∞–Ω–æ—Å–∏—Ç—å (—Å–æ–≤–µ—Ç—É–µ–º –≤—ã–±–∏—Ä–∞—Ç—å –æ–ø—Ç–∏–º–∞–ª—å–Ω–æ–µ —á–∏—Å–ª–æ –æ—Ç 50 –¥–æ 150): '))
knight = Knight(name_first, hp, attack)

print('–í–∞—à –ø–µ—Ä—Å–æ–Ω–∞–∂ —Å–æ–∑–¥–∞–Ω!')
print(knight.info())

# —Å–æ–∑–¥–∞–Ω–∏–µ –¥—Ä–∞–∫–æ–Ω–∞
dragon = Dragon(1,'Dragon', 1000, 100)

# –Ω–∞—á–∞–ª–æ —Å—é–∂–µ—Ç–∞

print('–í—ã –æ—Ç–∫—Ä—ã–≤–∞–µ—Ç–µ –≥–ª–∞–∑–∞ –∏ –≤–∏–¥–∏—Ç–µ –ø–µ—Ä–µ–¥ —Å–æ–±–æ–π —Å–µ—Ä–æ–µ –Ω–µ–±–æ, –∑–∞—Ç—è–Ω—É—Ç–æ–µ —Ç—è–∂—ë–ª—ã–º–∏ —Ç—É—á–∞–º–∏.')
print('–•–æ–ª–æ–¥–Ω—ã–π –≤–µ—Ç–µ—Ä –±—å—ë—Ç –≤ –ª–∏—Ü–æ. –í—ã —Å–∏–¥–∏—Ç–µ –Ω–∞ –¥–µ—Ä–µ–≤—è–Ω–Ω–æ–π —Å–∫–∞–º—å–µ, —Ä—É–∫–∏ —Å–≤—è–∑–∞–Ω—ã –∑–∞ —Å–ø–∏–Ω–æ–π.')
print('–†—è–¥–æ–º —Å –≤–∞–º–∏ ‚Äî –µ—â—ë –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø–ª–µ–Ω–Ω–∏–∫–æ–≤. –û–¥–∏–Ω –∏–∑ –Ω–∏—Ö, –≤ —Ä–≤–∞–Ω–æ–π –æ–¥–µ–∂–¥–µ, –±–æ—Ä–º–æ—á–µ—Ç:')
print(f'‚Äî {name_first}... –ù–∞–¥–µ—é—Å—å, —Ç–µ–±–µ –ø–æ–≤–µ–∑—ë—Ç –±–æ–ª—å—à–µ, —á–µ–º –Ω–∞–º.')
print('–ü–æ–≤–æ–∑–∫–∞ —Ç—Ä—è—Å—ë—Ç—Å—è –ø–æ –∫–∞–º–µ–Ω–∏—Å—Ç–æ–π –¥–æ—Ä–æ–≥–µ. –í–ø–µ—Ä–µ–¥–∏ –≤–∏–¥–Ω–µ—é—Ç—Å—è —Å—Ç–µ–Ω—ã –∫—Ä–µ–ø–æ—Å—Ç–∏ ‚Äî –•–µ–ª—å–≥–µ–Ω.')
print('...')
print('–°–ø—É—Å—Ç—è –∫–∞–∫–æ–µ-—Ç–æ –≤—Ä–µ–º—è, –ø–æ–≤–æ–∑–∫–∞ –æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç—Å—è.')
print('–ò–º–ø–µ—Ä—Å–∫–∏–π –æ—Ñ–∏—Ü–µ—Ä —á–∏—Ç–∞–µ—Ç —Å–ø–∏—Å–æ–∫:')
print(f'‚Äî –£–ª—å—Ñ—Ä–∏–∫ –ë—É—Ä–µ–≤–µ—Å—Ç–Ω–∏–∫... –†–∞–ª–æ—Ñ... –õ–æ–∫–∏—Ä –∏–∑ –†–æ—Ä–∏–∫—Å—Ç–µ–¥–∞... –∏... {name_first}.')
print('–í–∞—Å –≥—Ä—É–±–æ –≤—ã—Ç–∞–ª–∫–∏–≤–∞—é—Ç –Ω–∞ –∑–µ–º–ª—é. –°–æ–ª–¥–∞—Ç—ã –æ–∫—Ä—É–∂–∞—é—Ç –≤–∞—Å.')
print('–ö–∞–ø–∏—Ç–∞–Ω –ò–º–ø–µ—Ä–∏–∏ –ø–æ–¥—Ö–æ–¥–∏—Ç –±–ª–∏–∂–µ:')
print('‚Äî –°–µ–≥–æ–¥–Ω—è —Ö–æ—Ä–æ—à–∏–π –¥–µ–Ω—å –¥–ª—è —Å–º–µ—Ä—Ç–∏... –∏–ª–∏ –¥–ª—è —Å–≤–æ–±–æ–¥—ã. –†–µ—à–∞—Ç—å —Ç–µ–±–µ.')
print('–í–Ω–µ–∑–∞–ø–Ω–æ –∑–µ–º–ª—è –¥—Ä–æ–∂–∏—Ç. –ù–µ–±–æ —Ç–µ–º–Ω–µ–µ—Ç. –ò–∑-–∑–∞ –≥–æ—Ä —Ä–∞–∑–¥–∞—ë—Ç—Å—è –æ–≥–ª—É—à–∏—Ç–µ–ª—å–Ω—ã–π —Ä—ë–≤...')
print('‚Äî –î–†–ê–ö–û–ù!!! ‚Äî –∫—Ä–∏—á–∏—Ç –∫—Ç–æ-—Ç–æ –≤ –ø–∞–Ω–∏–∫–µ.')
print('–û–≥—Ä–æ–º–Ω–æ–µ —á—É–¥–æ–≤–∏—â–µ —Å –∫—Ä—ã–ª—å—è–º–∏ –∏ –æ–≥–Ω–µ–Ω–Ω—ã–º –¥—ã—Ö–∞–Ω–∏–µ–º –ø–æ—è–≤–ª—è–µ—Ç—Å—è –Ω–∞–¥ –•–µ–ª—å–≥–µ–Ω–æ–º.')
print('–ù–∞—á–∏–Ω–∞–µ—Ç—Å—è —Ö–∞–æ—Å. –ö–∞–º–Ω–∏ –ø–∞–¥–∞—é—Ç, —Å–æ–ª–¥–∞—Ç—ã —Ä–∞–∑–±–µ–≥–∞—é—Ç—Å—è.')
print('–†–∞–ª–æ—Ñ —Ö–≤–∞—Ç–∞–µ—Ç –≤–∞—Å –∑–∞ —Ä—É–∫—É:')
print('‚Äî –ë—ã—Å—Ç—Ä–æ! –ó–∞ –º–Ω–æ–π! –ï—Å–ª–∏ —Ö–æ—á–µ—à—å –≤—ã–∂–∏—Ç—å ‚Äî –±–µ–≥–∏!')
print()

# –ø–µ—Ä–≤—ã–π –≤—ã–±–æ—Ä
print('–ß—Ç–æ –≤—ã –¥–µ–ª–∞–µ—Ç–µ?')
print('1. –°–ª–µ–¥–æ–≤–∞—Ç—å –∑–∞ –†–∞–ª–æ—Ñ–æ–º –≤ –±–∞—à–Ω—é')
print('2. –ü–æ–ø—ã—Ç–∞—Ç—å—Å—è —É–±–µ–∂–∞—Ç—å –≤ –ª–µ—Å')
print('3. –°–ø—Ä—è—Ç–∞—Ç—å—Å—è –ø–æ–¥ –æ–±–ª–æ–º–∫–∞–º–∏')
d1 = int(input('–ù–∞–ø–∏—à–∏—Ç–µ —á–∏—Å–ª–æ: '))
while d1 not in [1, 2, 3]:
    d1 = int(input('–í—ã–±–µ—Ä–∏—Ç–µ —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 3: '))
if d1 == 2:
    # —Ç—É—Ç –æ–Ω —É–º–∏—Ä–∞–µ—Ç –æ—Ç —Ç—Ä–æ–ª—è

    print('\n–í—ã —Ä–µ–∑–∫–æ –±—Ä–æ—Å–∞–µ—Ç–µ—Å—å –≤ —Å—Ç–æ—Ä–æ–Ω—É –ª–µ—Å–∞, –Ω–∞–¥–µ—è—Å—å —Å–∫—Ä—ã—Ç—å—Å—è –≤ –≥—É—â–µ –¥–µ—Ä–µ–≤—å–µ–≤.')
    print('–ù–æ –µ–¥–≤–∞ –≤—ã –¥–æ–±–µ–≥–∞–µ—Ç–µ –¥–æ –æ–ø—É—à–∫–∏, –∏–∑-–ø–æ–¥ –∫–æ—Ä–Ω–µ–π –≤—ã–ª–µ–∑–∞–µ—Ç –æ–≥—Ä–æ–º–Ω—ã–π, –∑–ª–æ–≤–æ–Ω–Ω—ã–π —Ç—Ä–æ–ª–ª—å!')
    print('–ï–≥–æ –∫–æ–≥—Ç–∏ —Å–≤–µ—Ä–∫–∞—é—Ç –≤ –¥—ã–º—É, –∞ –≥–ª–∞–∑–∞ –≥–æ—Ä—è—Ç —è—Ä–æ—Å—Ç—å—é.')
    print("'‚Äî –ì—Ä—Ä—Ä... –ú–Ø–°–û!', ‚Äî —Ö—Ä–∏–ø–∏—Ç –æ–Ω, –∑–∞–Ω–æ—Å—è –ª–∞–ø—É.")
    print('–í—ã –Ω–µ —É—Å–ø–µ–≤–∞–µ—Ç–µ –¥–∞–∂–µ –∫—Ä–∏–∫–Ω—É—Ç—å...')
    print('\nüíÄ –í—ã –ø–æ–≥–∏–±–ª–∏. –¢—Ä–æ–ª–ª—å —É—Ç–∞—Å–∫–∏–≤–∞–µ—Ç –≤–∞—à–µ —Ç–µ–ª–æ –≤–≥–ª—É–±—å –ª–µ—Å–∞.')

    sys.exit()

elif d1 == 3:
    # —É–º–∏—Ä–∞–µ—Ç –æ—Ç –æ–≥–Ω—è –¥—Ä–∞–∫–æ–Ω–∞

    print('\n–í—ã –±—Ä–æ—Å–∞–µ—Ç–µ—Å—å –∫ –≥—Ä—É–¥–µ –æ–±–ª–æ–º–∫–æ–≤ —É —Ä—É—Ö–Ω—É–≤—à–µ–π —Å—Ç–µ–Ω—ã –∏ –Ω—ã—Ä—è–µ—Ç–µ –ø–æ–¥ –º–∞—Å—Å–∏–≤–Ω—É—é –±–∞–ª–∫—É.')
    print('‚Äî –°–ø—Ä—è—á—É—Å—å –∑–¥–µ—Å—å, –ø–æ–∫–∞ –≤—Å—ë –Ω–µ —É—Ç–∏—Ö–Ω–µ—Ç‚Ä¶ ‚Äî –¥—É–º–∞–µ—Ç–µ –≤—ã.')
    print('–ù–æ –≤ —ç—Ç–æ—Ç –º–æ–º–µ–Ω—Ç –¥—Ä–∞–∫–æ–Ω ‚Äî –û–¥–∏–Ω–Ω–∞–¥—Ü–∞—Ç—ã–π ‚Äî –≤–∑–º—ã–≤–∞–µ—Ç –Ω–∞–¥ –•–µ–ª—å–≥–µ–Ω–æ–º –∏ –æ—Ç–∫—Ä—ã–≤–∞–µ—Ç –ø–∞—Å—Ç—å.')
    print('–ò–∑ –µ–≥–æ –≥–æ—Ä–ª–∞ –≤—ã—Ä—ã–≤–∞–µ—Ç—Å—è –ø–æ—Ç–æ–∫ –±–µ–ª–æ-–≥–æ–ª—É–±–æ–≥–æ –ø–ª–∞–º–µ–Ω–∏!')
    print('–û–≥–æ–Ω—å –æ–±–∂–∏–≥–∞–µ—Ç –∫–∞–º–Ω–∏, –¥–µ—Ä–µ–≤–æ –∏ –ø–ª–æ—Ç—å. –í–æ–ª–Ω–∞ –∂–∞—Ä–∞ –ø—Ä–æ–Ω–∏–∫–∞–µ—Ç –¥–∞–∂–µ –ø–æ–¥ —É–∫—Ä—ã—Ç–∏–µ.')
    print('\n–û–¥–∏–Ω–Ω–∞–¥—Ü–∞—Ç—ã–π –≤—ã–∑—ã–≤–∞–µ—Ç –≤–∞—Å –Ω–∞ –±–∏—Ç–≤—É...')
    dragon.attack_dragon(knight)
    print('–í—ã —á—É–≤—Å—Ç–≤—É–µ—Ç–µ, –∫–∞–∫ –∫–æ–∂–∞ –ø–æ–∫—Ä—ã–≤–∞–µ—Ç—Å—è –≤–æ–ª–¥—ã—Ä—è–º–∏, –ª—ë–≥–∫–∏–µ –≥–æ—Ä—è—Ç‚Ä¶')
    print('–ü–æ—Å–ª–µ–¥–Ω–µ–µ, —á—Ç–æ –≤—ã —Å–ª—ã—à–∏—Ç–µ ‚Äî —Ä—ë–≤ –¥—Ä–∞–∫–æ–Ω–∞ –∏ –∫—Ä–∏–∫–∏ –ø–æ–≥–∏–±–∞—é—â–∏—Ö.')
    print('\nüíÄ –í—ã –ø–æ–≥–∏–±–ª–∏ –≤ –æ–≥–Ω–µ –û–¥–∏–Ω–Ω–∞–¥—Ü–∞—Ç–æ–≥–æ.')

    sys.exit()

# –ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ —Å—é–∂–µ—Ç–∞











