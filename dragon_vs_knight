attack = int(input('Какое количество урона ваш персонаж будет наносить (советуем выбирать оптимальное число от 50 до 150): '))
knight = Person(name_first, hp, attack)
print('Ваш персонаж создан!')
print(knight.info())

# создание дракона
dragon = Person('Dragon', 1000, 100)

