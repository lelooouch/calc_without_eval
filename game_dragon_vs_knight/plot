    print('–†–∞–ª–æ—Ñ –ø–∞–¥–∞–µ—Ç –Ω–∞ –æ–¥–Ω–æ –∫–æ–ª–µ–Ω–æ, –æ–≥–ª—É—à—ë–Ω–Ω—ã–π —É–¥–∞—Ä–Ω–æ–π –≤–æ–ª–Ω–æ–π.')
    time.sleep(1)
    print('‚Äî –¢—ã‚Ä¶ —á—Ç–æ —Ç—ã —Ç–æ–ª—å–∫–æ —á—Ç–æ —Å–¥–µ–ª–∞–ª?! ‚Äî —Å–º–æ—Ç—Ä–∏—Ç –æ–Ω –Ω–∞ –≤–∞—Å —Å –±–ª–∞–≥–æ–≥–æ–≤–µ–π–Ω—ã–º —É–∂–∞—Å–æ–º.')
    print('‚Äî –Ø‚Ä¶ –Ω–µ –∑–Ω–∞—é, ‚Äî —à–µ–ø—á–µ—Ç–µ –≤—ã, —á—É–≤—Å—Ç–≤—É—è, –∫–∞–∫ —Å–∏–ª–∞ –µ—â—ë –≤–∏–±—Ä–∏—Ä—É–µ—Ç –≤ –≤–∞—à–∏—Ö –∫–æ—Å—Ç—è—Ö.')
    time.sleep(1)
    print('\n–í—ã –∑–∞–≥–ª—è–¥—ã–≤–∞–µ—Ç–µ –≤ –Ω–æ–≤—ã–π –ø—Ä–æ—Ö–æ–¥. –¢–∞–º ‚Äî –ª–µ—Å—Ç–Ω–∏—Ü–∞, –≤–µ–¥—É—â–∞—è –≤–≤–µ—Ä—Ö‚Ä¶ –ø—Ä—è–º–æ –ø–æ–¥ –•—Ä–∞–º –ö–∏–Ω–∞—Ä–µ—Ç.')
    print('‚Äî –ü–æ—Ö–æ–∂–µ, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç –†–∞–ª–æ—Ñ, –ø–æ–¥–Ω–∏–º–∞—è—Å—å, ‚Äî —Ç—ã –Ω–µ –ø—Ä–æ—Å—Ç–æ –ø—É—Ç–Ω–∏–∫.')
    print('‚Äî –¢—ã ‚Äî **–î—Ä–∞–∫–æ–Ω–æ—Ä–æ–∂–¥—ë–Ω–Ω—ã–π**.')
    time.sleep(2)

    
