# начало игры
# создание персонажа
name_first = input('Напишите имя вашего героя: ')
hp = int(input('Какое количество хп у него будет (советуем выбирать оптимальное число от 500 до 2000): '))
attack = int(input('Какое количество урона ваш персонаж будет наносить (советуем выбирать оптимальное число от 50 до 150): '))
knight = Person(name_first, hp, attack)
print('Ваш персонаж создан!')
print(knight.info())

# создание дракона
dragon = Person('Dragon', 1000, 100)
print(dragon.info())
knight.attack_other(dragon)
print(dragon.info())
