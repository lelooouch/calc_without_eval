print('–ì–¥–µ-—Ç–æ –≤–ø–µ—Ä–µ–¥–∏ —Å–ª—ã—à–µ–Ω –ø–ª–µ—Å–∫ –≤–æ–¥—ã –∏ —ç—Ö–æ —á—å–∏—Ö-—Ç–æ —à–∞–≥–æ–≤‚Ä¶')

# –ø—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ —Å—é–∂–µ—Ç–∞
print('\n–¢–æ–Ω–Ω–µ–ª—å –ø–æ—Å—Ç–µ–ø–µ–Ω–Ω–æ —Ä–∞—Å—à–∏—Ä—è–µ—Ç—Å—è. –í–æ–∑–¥—É—Ö —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è –≤–ª–∞–∂–Ω—ã–º, –ø–∞—Ö–Ω–µ—Ç –º—Ö–æ–º –∏ —Å—Ç–∞—Ä—ã–º –∫–∞–º–Ω–µ–º.')
print('–†–∞–ª–æ—Ñ –∏–¥—ë—Ç –≤–ø–µ—Ä–µ–¥–∏, –¥–µ—Ä–∂–∞ –≤ —Ä—É–∫–∞—Ö –æ–±–ª–æ–º–æ–∫ –≥–æ—Ä—è—â–µ–≥–æ —Ñ–∞–∫–µ–ª–∞.')
time.sleep(1)
print('‚Äî –ú—ã –ø–æ—á—Ç–∏ –≤—ã—à–ª–∏, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç –æ–Ω. ‚Äî –≠—Ç–æ—Ç —Ö–æ–¥ –≤–µ–¥—ë—Ç –∫ —Ä–µ–∫–µ. –û—Ç—Ç—É–¥–∞ ‚Äî –ø—Ä—è–º–∞—è –¥–æ—Ä–æ–≥–∞ –≤ –†–∏–≤–µ—Ä–≤—É–¥.')
time.sleep(1)
print('\n–í–Ω–µ–∑–∞–ø–Ω–æ –æ–Ω –æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç—Å—è.')
time.sleep(1)
print('‚Äî –¢—Å-—Å! –°–ª—ã—à–∏—à—å?')
time.sleep(1)
print('–ò–∑ —Ç–µ–º–Ω–æ—Ç—ã –¥–æ–Ω–æ—Å–∏—Ç—Å—è –º–µ—Ä–Ω–æ–µ *–∫–∞–ø-–∫–∞–ø*‚Ä¶ –∏ —á—Ç–æ-—Ç–æ –µ—â—ë ‚Äî —Ç–∏—Ö–æ–µ, —à—É—Ä—à–∞—â–µ–µ, –∫–∞–∫ –±—É–¥—Ç–æ –∫—Ç–æ-—Ç–æ –ø–æ–ª–∑—ë—Ç –ø–æ –∫–∞–º–Ω—è–º.')
print('\n–†–∞–ª–æ—Ñ –ø–æ–≤–æ—Ä–∞—á–∏–≤–∞–µ—Ç—Å—è –∫ –≤–∞–º:')
time.sleep(1)
print('‚Äî –ú—ã –Ω–µ –æ–¥–Ω–∏. –ù–æ —è –Ω–µ —Å–ª—ã—à—É —à–∞–≥–æ–≤ —Å–æ–ª–¥–∞—Ç. –≠—Ç–æ —á—Ç–æ-—Ç–æ –¥—Ä—É–≥–æ–µ.')
time.sleep(1)
print('‚Äî –ù–∞–¥–æ –±—ã—Ç—å –æ—Å—Ç–æ—Ä–æ–∂–Ω—ã–º–∏. –í —ç—Ç–∏—Ö —Ç–æ–Ω–Ω–µ–ª—è—Ö –≤–æ–¥—è—Ç—Å—è —Ç—Ä–æ–ª–ª–∏‚Ä¶ –∏ —Ö—É–∂–µ —Ç–æ–≥–æ ‚Äî —à–ø–∏–ª—å—Å–∫–∏–µ —Ç–≤–∞—Ä–∏.')
time.sleep(1)
print('\n–í—ã –ø–æ–¥—Ö–æ–¥–∏—Ç–µ –∫ —Ä–∞–∑–≤–∏–ª–∫–µ.')
print('–°–ª–µ–≤–∞ ‚Äî —É–∑–∫–∏–π –ø—Ä–æ—Ö–æ–¥, –æ—Ç–∫—É–¥–∞ —Å–ª—ã—à–µ–Ω –ø–ª–µ—Å–∫ –≤–æ–¥—ã.')
print('–°–ø—Ä–∞–≤–∞ ‚Äî –±–æ–ª–µ–µ —à–∏—Ä–æ–∫–∏–π –∫–æ—Ä–∏–¥–æ—Ä, –Ω–æ –æ—Ç—Ç—É–¥–∞ –¥–æ–Ω–æ—Å–∏—Ç—Å—è —Å—Ç—Ä–∞–Ω–Ω–æ–µ —ç—Ö–æ, –±—É–¥—Ç–æ –∫—Ç–æ-—Ç–æ –±–æ—Ä–º–æ—á–µ—Ç.')

# –≤—ã–±–æ—Ä

print('\n–ß—Ç–æ –≤—ã —Ä–µ—à–∞–µ—Ç–µ?')
print('1. –ü–æ–π—Ç–∏ –Ω–∞–ª–µ–≤–æ ‚Äî –∫ —Ä–µ–∫–µ. –í–æ–¥–∞ –∑–Ω–∞—á–∏—Ç –ø—É—Ç—å –Ω–∞—Ä—É–∂—É.')
print('2. –ü–æ–π—Ç–∏ –Ω–∞–ø—Ä–∞–≤–æ ‚Äî –ø—Ä–æ–≤–µ—Ä–∏—Ç—å, –∫—Ç–æ —Ç–∞–º –±–æ—Ä–º–æ—á–µ—Ç. –ú–æ–∂–µ—Ç, —ç—Ç–æ –≤—ã–∂–∏–≤—à–∏–π?')
print('3. –û—Å–º–æ—Ç—Ä–µ—Ç—å —Å—Ç–µ–Ω—ã ‚Äî –≤–¥—Ä—É–≥ –µ—Å—Ç—å —Å–∫—Ä—ã—Ç—ã–π –ø—Ä–æ—Ö–æ–¥ –∏–ª–∏ –Ω–∞–¥–ø–∏—Å–∏?')

d1 = int(input('–ù–∞–ø–∏—à–∏—Ç–µ —á–∏—Å–ª–æ: '))

if d1 == 1:
    print('\n‚Äî –ö —Ä–µ–∫–µ, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç–µ –≤—ã.')
    print('–†–∞–ª–æ—Ñ –∫–∏–≤–∞–µ—Ç:')
    time.sleep(1)
    print('‚Äî –†–∞–∑—É–º–Ω–æ. –í–æ–¥–∞ –Ω–µ –≤—Ä—ë—Ç.')
    time.sleep(1)
    print('–í—ã –∏–¥—ë—Ç–µ –ø–æ —Å–∫–æ–ª—å–∑–∫–∏–º —Å—Ç—É–ø–µ–Ω—è–º. –í—Å–∫–æ—Ä–µ –ø–µ—Ä–µ–¥ –≤–∞–º–∏ –æ—Ç–∫—Ä—ã–≤–∞–µ—Ç—Å—è –ø–µ—â–µ—Ä–∞ —Å –ø–æ–¥–∑–µ–º–Ω–æ–π —Ä–µ–∫–æ–π.')
    print('–õ–æ–¥–∫–∞, –ø—Ä–∏–≤—è–∑–∞–Ω–Ω–∞—è –∫ –∫–∞–º–Ω—é, –º—è–≥–∫–æ –ø–æ–∫–∞—á–∏–≤–∞–µ—Ç—Å—è –Ω–∞ –≤–æ–ª–Ω–∞—Ö.')
    time.sleep(1)
    print('‚Äî –£–¥–∞—á–∞ —Å –Ω–∞–º–∏! ‚Äî —É—Å–º–µ—Ö–∞–µ—Ç—Å—è –†–∞–ª–æ—Ñ.')
    time.sleep(1)
    print('–í—ã –æ—Ç–≤—è–∑—ã–≤–∞–µ—Ç–µ –ª–æ–¥–∫—É –∏ –ø–ª—ã–≤—ë—Ç–µ –≤–Ω–∏–∑ –ø–æ —Ç–µ—á–µ–Ω–∏—é.')
    print('–ß–µ—Ä–µ–∑ —á–∞—Å –≤–∞—Å –≤—ã–Ω–æ—Å–∏—Ç –∫ –≤–æ–¥–æ–ø–∞–¥—É —É –ø–æ–¥–Ω–æ–∂–∏—è –≥–æ—Ä—ã‚Ä¶ –ø—Ä—è–º–æ —É –≤–æ—Ä–æ—Ç –†–∏–≤–µ—Ä–≤—É–¥–∞.')

elif d1 == 2:
    print('\n‚Äî –ü–æ–π–¥—ë–º —Ç—É–¥–∞, ‚Äî —Ä–µ—à–∞–µ—Ç–µ –≤—ã. ‚Äî –ú–æ–∂–µ—Ç, —ç—Ç–æ –∫—Ç–æ-—Ç–æ –∏–∑ –Ω–∞—à–∏—Ö.')
    time.sleep(1)
    print('–†–∞–ª–æ—Ñ –Ω–∞—Å—Ç–æ—Ä–æ–∂–µ–Ω–Ω–æ —Å–∂–∏–º–∞–µ—Ç —Ç–æ–ø–æ—Ä:')
    time.sleep(1)
    print('‚Äî –ò–ª–∏ –∫—Ç–æ-—Ç–æ –Ω–µ –∏–∑ –Ω–∞—à–∏—Ö‚Ä¶ –ë—É–¥—å –≥–æ—Ç–æ–≤.')
    time.sleep(1)
    print('\n–í—ã –æ—Å—Ç–æ—Ä–æ–∂–Ω–æ –ø—Ä–æ–¥–≤–∏–≥–∞–µ—Ç–µ—Å—å –ø–æ —Ç–æ–Ω–Ω–µ–ª—é. –ë–æ—Ä–º–æ—Ç–∞–Ω–∏–µ —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è –≥—Ä–æ–º—á–µ ‚Äî —ç—Ç–æ –Ω–µ —Ä–µ—á—å, –∞‚Ä¶ –∑–∞–∫–ª–∏–Ω–∞–Ω–∏–µ.')
    print('–í–ø–µ—Ä–µ–¥–∏ –≤ –ø–æ–ª—É–º—Ä–∞–∫–µ –≤–∏–¥–Ω–µ–µ—Ç—Å—è —Ñ–∏–≥—É—Ä–∞ –≤ —á—ë—Ä–Ω–æ–º –ø–ª–∞—â–µ, —Å–∫–ª–æ–Ω–∏–≤—à–∞—è—Å—è –Ω–∞–¥ –∞–ª—Ç–∞—Ä—ë–º –∏–∑ –∫–æ—Å—Ç–µ–π.')
    time.sleep(1)
    print('\n‚Äî –ú–∞–≥! ‚Äî —à–µ–ø—á–µ—Ç –†–∞–ª–æ—Ñ. ‚Äî –ò –Ω–µ –∏–∑ –Ω–∞—à–∏—Ö.')
    time.sleep(1)
    print('–í–Ω–µ–∑–∞–ø–Ω–æ —Ñ–∏–≥—É—Ä–∞ –ø–æ–≤–æ—Ä–∞—á–∏–≤–∞–µ—Ç—Å—è. –ü–æ–¥ –∫–∞–ø—é—à–æ–Ω–æ–º ‚Äî –ø—É—Å—Ç–æ—Ç–∞. –¢–æ–ª—å–∫–æ –¥–≤–∞ —Ç–ª–µ—é—â–∏—Ö –≥–ª–∞–∑–∞.')
    time.sleep(1)
    print('‚Äî –ê—Ö‚Ä¶ –î—Ä–∞–∫–æ–Ω–æ—Ä–æ–∂–¥—ë–Ω–Ω—ã–π, ‚Äî —Ä–∞–∑–¥–∞—ë—Ç—Å—è —Ö—Ä–∏–ø–ª—ã–π –≥–æ–ª–æ—Å. ‚Äî –Ø –∂–¥–∞–ª —Ç–µ–±—è.')
    time.sleep(1)
    print('\n–û–Ω –≤–∑–º–∞—Ö–∏–≤–∞–µ—Ç —Ä—É–∫–æ–π ‚Äî –∏ –†–∞–ª–æ—Ñ –æ—Ç–ª–µ—Ç–∞–µ—Ç –∫ —Å—Ç–µ–Ω–µ, –æ–≥–ª—É—à—ë–Ω–Ω—ã–π.')
    time.sleep(1)
    print('‚Äî –ù–µ –±–æ–π—Å—è, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç –º–∞–≥. ‚Äî –Ø –Ω–µ —Ç–≤–æ–π –≤—Ä–∞–≥. –Ø –∏–∑ –ë—Ä–∞—Ç—Å—Ç–≤–∞ –¢—å–º—ã‚Ä¶ –Ω–æ —Å–µ–π—á–∞—Å —è –∑–¥–µ—Å—å –ø–æ –¥—Ä—É–≥–æ–º—É –ø–æ–≤–æ–¥—É.')
    print('‚Äî –¢—ã —Å–ª—ã—à–∏—à—å –∏—Ö, –Ω–µ —Ç–∞–∫ –ª–∏? –ì–æ–ª–æ—Å–∞ –≤ –∫—Ä–æ–≤–∏. –†—ë–≤ –≤ –Ω–µ–±–µ. –≠—Ç–æ –Ω–∞—á–∞–ª–æ.')
    print('‚Äî –ò–º–ø–µ—Ä–∏—è –∏—â–µ—Ç —Ç–µ–±—è. –î—Ä–∞–∫–æ–Ω—ã –≤–æ–∑–≤—Ä–∞—â–∞—é—Ç—Å—è. –ê —Ç—ã‚Ä¶ —Ç—ã –¥–æ–ª–∂–µ–Ω –≤—ã–±—Ä–∞—Ç—å –ø—É—Ç—å.')
    time.sleep(1)
    print('\n–ú–∞–≥ —Ä–∞—Å—Ç–≤–æ—Ä—è–µ—Ç—Å—è –≤ —Ç–µ–Ω—è—Ö, –æ—Å—Ç–∞–≤–∏–≤ –ø–æ—Å–ª–µ —Å–µ–±—è —Ç–æ–ª—å–∫–æ –∑–∞–ø–∞—Ö –æ–∑–æ–Ω–∞ –∏ –ø–µ–ø–ª–∞.')
    print('–†–∞–ª–æ—Ñ –ø–æ–¥–Ω–∏–º–∞–µ—Ç—Å—è, –ø–æ—Ç–∏—Ä–∞—è –≤–∏—Å–æ–∫:')
    print('‚Äî –ö—Ç–æ‚Ä¶ —á—Ç–æ —ç—Ç–æ –±—ã–ª–æ?')
    print('‚Äî –ù–µ –∑–Ω–∞—é, ‚Äî –æ—Ç–≤–µ—á–∞–µ—Ç–µ –≤—ã. ‚Äî –ù–æ –æ–Ω –ø—Ä–∞–≤. –≠—Ç–æ —Ç–æ–ª—å–∫–æ –Ω–∞—á–∞–ª–æ.')
    time.sleep(1)
    print('\n–í—ã –ø–æ–∫–∏–¥–∞–µ—Ç–µ —Ç–æ–Ω–Ω–µ–ª—å –∏ –≤—ã—Ö–æ–¥–∏—Ç–µ –Ω–∞ –ø–æ–≤–µ—Ä—Ö–Ω–æ—Å—Ç—å. –ü–µ—Ä–µ–¥ –≤–∞–º–∏ ‚Äî —Ç–∏—Ö–∏–π –ª–µ—Å, –∞ –≤–¥–∞–ª–µ–∫–µ –¥—ã–º–æ–∫ –Ω–∞–¥ –∫—Ä—ã—à–∞–º–∏.')
    print('‚Äî –≠—Ç–æ –†–∏–≤–µ—Ä–≤—É–¥, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç –†–∞–ª–æ—Ñ. ‚Äî –¢–∞–º –Ω–∞—Å –Ω–µ –Ω–∞–π–¥—É—Ç‚Ä¶ –ø–æ–∫–∞.')
    time.sleep(1)

elif d1 == 3:
    print('\n‚Äî –ü–æ–¥–æ–∂–¥–∏, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç–µ –≤—ã, –ø—Ä–æ–≤–æ–¥—è —Ä—É–∫–æ–π –ø–æ —Å—ã—Ä–æ–π —Å—Ç–µ–Ω–µ.')
    print('–†–∞–ª–æ—Ñ —Ñ—ã—Ä–∫–∞–µ—Ç:')
    print('‚Äî –ß—Ç–æ, –∏—â–µ—à—å —Å–µ–∫—Ä–µ—Ç–Ω—É—é –¥–≤–µ—Ä—å, –∫–∞–∫ –≤ –¥–µ—Ç—Å–∫–∏—Ö —Å–∫–∞–∑–∫–∞—Ö?')
    time.sleep(1)
    print('\n–ù–æ –≤—ã –Ω–µ –æ—à–∏–±–ª–∏—Å—å. –ü–æ–¥ —Å–ª–æ–µ–º –º—Ö–∞ –≤—ã –Ω–∞—â—É–ø—ã–≤–∞–µ—Ç–µ –≤—ã–±–∏—Ç—ã–µ –≤ –∫–∞–º–Ω–µ —Ä—É–Ω—ã.')
    print('–û–Ω–∏ —Ç–∞–∫–∏–µ –∂–µ, –∫–∞–∫ –Ω–∞ —Å—É–Ω–¥—É–∫–µ‚Ä¶ –∏ –Ω–∞ –∞–º—É–ª–µ—Ç–µ, —á—Ç–æ –≤—ã –Ω–∞—à–ª–∏ —Ä–∞–Ω–µ–µ.')
    print('–í—ã –ø—Ä–æ–∏–∑–Ω–æ—Å–∏—Ç–µ –æ–¥–Ω—É –∏–∑ –Ω–∏—Ö –≤—Å–ª—É—Ö ‚Äî –Ω–µ–æ—Å–æ–∑–Ω–∞–Ω–Ω–æ, –∫–∞–∫ –±—É–¥—Ç–æ –∑–Ω–∞–ª–∏ –µ—ë –≤—Å–µ–≥–¥–∞:')
    time.sleep(1)
    print('\n‚Äî **FUS**‚Ä¶')
    time.sleep(1)
    print('\n–°—Ç–µ–Ω–∞ –≤–∑—Ä—ã–≤–∞–µ—Ç—Å—è –≤–Ω—É—Ç—Ä—å! –ö–∞–º–Ω–∏ —Ä–∞–∑–ª–µ—Ç–∞—é—Ç—Å—è, –æ—Ç–∫—Ä—ã–≤–∞—è —É–∑–∫–∏–π –ø—Ä–æ—Ö–æ–¥.')
    print('–†–∞–ª–æ—Ñ –ø–∞–¥–∞–µ—Ç –Ω–∞ –æ–¥–Ω–æ –∫–æ–ª–µ–Ω–æ, –æ–≥–ª—É—à—ë–Ω–Ω—ã–π —É–¥–∞—Ä–Ω–æ–π –≤–æ–ª–Ω–æ–π.')
    time.sleep(1)
    print('‚Äî –¢—ã‚Ä¶ —á—Ç–æ —Ç—ã —Ç–æ–ª—å–∫–æ —á—Ç–æ —Å–¥–µ–ª–∞–ª?! ‚Äî —Å–º–æ—Ç—Ä–∏—Ç –æ–Ω –Ω–∞ –≤–∞—Å —Å –±–ª–∞–≥–æ–≥–æ–≤–µ–π–Ω—ã–º —É–∂–∞—Å–æ–º.')
    print('‚Äî –Ø‚Ä¶ –Ω–µ –∑–Ω–∞—é, ‚Äî —à–µ–ø—á–µ—Ç–µ –≤—ã, —á—É–≤—Å—Ç–≤—É—è, –∫–∞–∫ —Å–∏–ª–∞ –µ—â—ë –≤–∏–±—Ä–∏—Ä—É–µ—Ç –≤ –≤–∞—à–∏—Ö –∫–æ—Å—Ç—è—Ö.')
    time.sleep(1)
    print('\n–í—ã –∑–∞–≥–ª—è–¥—ã–≤–∞–µ—Ç–µ –≤ –Ω–æ–≤—ã–π –ø—Ä–æ—Ö–æ–¥. –¢–∞–º ‚Äî –ª–µ—Å—Ç–Ω–∏—Ü–∞, –≤–µ–¥—É—â–∞—è –≤–≤–µ—Ä—Ö‚Ä¶ –ø—Ä—è–º–æ –ø–æ–¥ –•—Ä–∞–º –ö–∏–Ω–∞—Ä–µ—Ç.')
    print('–ù–æ –≤–¥—Ä—É–≥ –∏–∑ —Ç—å–º—ã —Ä–∞–∑–¥–∞—ë—Ç—Å—è –ª—è–∑–≥ –¥–æ—Å–ø–µ—Ö–æ–≤.')
    time.sleep(1)
    print('‚Äî –ë–∞–Ω–¥–∏—Ç—ã! ‚Äî –∫—Ä–∏—á–∏—Ç –†–∞–ª–æ—Ñ, –≤—ã—Ö–≤–∞—Ç—ã–≤–∞—è —Ç–æ–ø–æ—Ä.')
    print('\n–¢—Ä–æ–µ –≤–æ–æ—Ä—É–∂—ë–Ω–Ω—ã—Ö —Ä–∞–∑–±–æ–π–Ω–∏–∫–æ–≤ –≤—ã—Å–∫–∞–∫–∏–≤–∞—é—Ç –∏–∑ –±–æ–∫–æ–≤–æ–≥–æ –æ—Ç–≤–µ—Ç–≤–ª–µ–Ω–∏—è!')
    print('–û–¥–∏–Ω –∏–∑ –Ω–∏—Ö —Å–º–µ—ë—Ç—Å—è:')
    print('‚Äî –ù—É –Ω—É, –∫–∞–∫–∏–µ –≥–æ—Å—Ç–∏! –î–∞–≤–∞–π—Ç–µ-–∫–∞ –≤–∞—à–∏ –∫–æ—à–µ–ª—å–∫–∏‚Ä¶ –∏ –∂–∏–∑–Ω–∏!')
    time.sleep(1)
    print('\n–ë–∞–Ω–¥–∏—Ç –≤—ã–∑—ã–≤–∞–µ—Ç –≤–∞—Å –Ω–∞ –±–∏—Ç–≤—É...')
    time.sleep(1)

    # –æ—Ç–∫—Ä—ã–≤–∞–µ–º –∏–Ω–≤–µ–Ω—Ç–∞—Ä—å
    knight.inventory()

    # —Å—Ä–∞–∂–µ–Ω–∏–µ —Å –±–∞–Ω–¥–∏—Ç–æ–º
    knight.attack_other(bandit)
    money = random.randint(40, 60)
    knight.balance += money
    print(f'–ü–æ–∑–¥—Ä–∞–≤–ª—è—é! –í—ã –≤—ã–∏–≥—Ä–∞–ª–∏ {money} –º–æ–Ω–µ—Ç!')
    print('\n–ü–æ—Å–ª–µ –∂–µ—Å—Ç–æ–∫–æ–π —Å—Ö–≤–∞—Ç–∫–∏ –≤—ã —Å—Ç–æ–∏—Ç–µ –Ω–∞–¥ —Ç–µ–ª–∞–º–∏ –≤—Ä–∞–≥–æ–≤, –∑–∞–¥—ã—Ö–∞—è—Å—å.')
    print('–†–∞–ª–æ—Ñ –≤—ã—Ç–∏—Ä–∞–µ—Ç –∫—Ä–æ–≤—å —Å —Ç–æ–ø–æ—Ä–∞:')
    print('‚Äî –•–æ—Ä–æ—à–∞—è —Ä–∞–∑–º–∏–Ω–∫–∞ –ø–µ—Ä–µ–¥ –†–∏–≤–µ—Ä–≤—É–¥–æ–º.')
    print('–í—ã –ø–æ–¥–Ω–∏–º–∞–µ—Ç–µ—Å—å –ø–æ –ª–µ—Å—Ç–Ω–∏—Ü–µ –∏ –≤—ã—Ö–æ–¥–∏—Ç–µ –Ω–∞ —Å–∫–ª–æ–Ω —Ö–æ–ª–º–∞.')
    print('–í–Ω–∏–∑—É, —É —Ä–µ–∫–∏, –º–∏—Ä–Ω–æ –¥—Ä–µ–º–ª–µ—Ç –¥–µ—Ä–µ–≤—É—à–∫–∞ —Å —á–µ—Ä–µ–ø–∏—á–Ω—ã–º–∏ –∫—Ä—ã—à–∞–º–∏.')
    print('‚Äî –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –†–∏–≤–µ—Ä–≤—É–¥, ‚Äî –≥–æ–≤–æ—Ä–∏—Ç –†–∞–ª–æ—Ñ. ‚Äî –ó–¥–µ—Å—å –Ω–∞—á–Ω—ë—Ç—Å—è —Ç–≤–æ—è –Ω–æ–≤–∞—è –∂–∏–∑–Ω—å.')

# –ø—É—Ç—å –≤ –í–∞–π—Ç—Ä–∞–Ω

print('\n–í—ã –≤—ã—Ö–æ–¥–∏—Ç–µ –∏–∑ —Ç–æ–Ω–Ω–µ–ª—è –≤ –ø—Ä–æ—Ö–ª–∞–¥–Ω—ã–π —Ä–∞—Å—Å–≤–µ—Ç.')
time.sleep(1.2)
print('–ó–∞ —Å–ø–∏–Ω–æ–π ‚Äî –¥—ã–º—è—â–∏–µ—Å—è —Ä—É–∏–Ω—ã –•–µ–ª—å–≥–µ–Ω–∞. –í–ø–µ—Ä–µ–¥–∏ ‚Äî –≥—É—Å—Ç–æ–π –ª–µ—Å, –æ–∫—É—Ç–∞–Ω–Ω—ã–π —Ç—É–º–∞–Ω–æ–º.')
time.sleep(1.5)
print('–†–∞–ª–æ—Ñ –∫–ª–∞–¥—ë—Ç —Ä—É–∫—É –≤–∞–º –Ω–∞ –ø–ª–µ—á–æ:')
print('‚Äî –¢—ã –¥–æ–∫–∞–∑–∞–ª, —á—Ç–æ –¥–æ—Å—Ç–æ–∏–Ω –∂–∏—Ç—å. –ù–æ –ø—É—Ç—å –≤ –°–∫–∞–π—Ä–∏–º–µ –Ω–µ –¥–ª—è —Å–ª–∞–±—ã—Ö.')
time.sleep(1.2)
print('‚Äî –ò–¥–∏ –Ω–∞ —Å–µ–≤–µ—Ä. –¢–∞–º ‚Äî –í–∞–π—Ç—Ä–∞–Ω, —Å—Ç–æ–ª–∏—Ü–∞ –ë–µ–ª—ã—Ö –ì–æ—Ä. –¢–∞–º —Ç—ã –Ω–∞–π–¥—ë—à—å –ø—Ä–∏—é—Ç‚Ä¶ –∏ –æ—Ç–≤–µ—Ç—ã.')
time.sleep(1.5)
print('–û–Ω –∫–∏–¥–∞–µ—Ç –≤–∞–º –ø–æ—Ç—Ä—ë–ø–∞–Ω–Ω—É—é –∫–∞—Ä—Ç—É –∏ –∏—Å—á–µ–∑–∞–µ—Ç –≤ —á–∞—â–µ.')
print('–í—ã –æ—Å—Ç–∞—ë—Ç–µ—Å—å –æ–¥–∏–Ω.')

time.sleep(1)
print('\n–î–≤–∞ –¥–Ω—è –≤—ã –∏–¥—ë—Ç–µ —á–µ—Ä–µ–∑ –ª–µ—Å. –ì–æ–ª–æ–¥ —â–µ–º–∏—Ç –∂–∏–≤–æ—Ç, –Ω–æ –≤—ã –≤—ã–∂–∏–≤–∞–µ—Ç–µ.')
print('–ù–∞–∫–æ–Ω–µ—Ü, —Å–∫–≤–æ–∑—å –¥–µ—Ä–µ–≤—å—è –≤—ã –≤–∏–¥–∏—Ç–µ –æ—á–µ—Ä—Ç–∞–Ω–∏—è –≥–æ—Ä–æ–¥–∞ –Ω–∞ –≥–æ—Ä–µ ‚Äî –±–µ–ª—ã–µ —Å—Ç–µ–Ω—ã, –±–∞—à–Ω–∏, –î—Ä–∞–∫–æ–Ω–∏–π –ö–ª—é–≤...')
time.sleep(1)
print('–≠—Ç–æ ‚Äî **–í–∞–π—Ç—Ä–∞–Ω**, —Å—Ç–æ–ª–∏—Ü–∞ –°–∫–∞–π—Ä–∏–º–∞.')

time.sleep(1)
print('\n–£ –≤–æ—Ä–æ—Ç –≤–∞—Å –æ—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ—Ç —Å—Ç—Ä–∞–∂–Ω–∏–∫ –≤ —Å–µ—Ä–µ–±—Ä—è–Ω—ã—Ö –¥–æ—Å–ø–µ—Ö–∞—Ö:')
print('‚Äî –ò–º—è –∏ —Ü–µ–ª—å –≤–∏–∑–∏—Ç–∞, –ø—É—Ç–Ω–∏–∫?')
print(f'‚Äî {knight.name}... –•–º. –°–ª—ã—à–∞–ª, —Ç—ã –≤—ã–∂–∏–ª –≤ –•–µ–ª—å–≥–µ–Ω–µ. –£–≤–∞–∂–∞—é.')
print('–°—Ç—Ä–∞–∂–Ω–∏–∫ –∫–∏–≤–∞–µ—Ç –∏ –ø—Ä–æ–ø—É—Å–∫–∞–µ—Ç –≤–∞—Å.')

time.sleep(1)
print('\n–í—ã –≤—Ö–æ–¥–∏—Ç–µ –Ω–∞ –æ–∂–∏–≤–ª—ë–Ω–Ω—É—é –ø–ª–æ—â–∞–¥—å. –¢–æ—Ä–≥–æ–≤—Ü—ã –∫—Ä–∏—á–∞—Ç, –¥–µ—Ç–∏ –±–µ–≥–∞—é—Ç, –ø—Å—ã –ª–∞—é—Ç.')
print('–ó–∞–ø–∞—Ö–∏ —Ö–ª–µ–±–∞, –∫–æ–∂–∏ –∏ –¥—ã–º–∞ –Ω–∞–ø–æ–ª–Ω—è—é—Ç –≤–æ–∑–¥—É—Ö.')
time.sleep(1)
print('–í–Ω–µ–∑–∞–ø–Ω–æ –∫—Ç–æ-—Ç–æ —Ö–≤–∞—Ç–∞–µ—Ç –≤–∞—Å –∑–∞ —Ä—É–∫–∞–≤:')
print('‚Äî –≠–π, –¥—Ä—É–≥! –¢—ã –≤—ã–≥–ª—è–¥–∏—à—å —Ç–∞–∫, –±—É–¥—Ç–æ —Ç–µ–±–µ —Å—Ä–æ—á–Ω–æ –Ω—É–∂–Ω—ã –ø—Ä–∏–ø–∞—Å—ã!')

time.sleep(1)
print('\n–ü–µ—Ä–µ–¥ –≤–∞–º–∏ ‚Äî –ø–æ–ª–Ω—ã–π –º—É–∂—á–∏–Ω–∞ –≤ –ø—ë—Å—Ç—Ä–æ–π –æ–¥–µ–∂–¥–µ, —Å –¥–æ–±—Ä–æ–¥—É—à–Ω–æ–π —É–ª—ã–±–∫–æ–π –∏ –±–ª–µ—Å—Ç—è—â–∏–º–∏ –≥–ª–∞–∑–∞–º–∏.')
print('‚Äî –Ø **–ë–µ–≥—Ç–∞—Ä**, –≤–ª–∞–¥–µ–ª–µ—Ü –ª–∞–≤–∫–∏ ‚Äû–î—Ä–µ–≤–Ω–æ—Å—Ç–∏ –∏ –¥–∏–∫–æ–≤–∏–Ω–∫–∏‚Äú! –£ –º–µ–Ω—è –µ—Å—Ç—å –≤—Å—ë: –æ—Ç –∏–≥–æ–ª–æ–∫ –¥–æ –¥—Ä–∞–∫–æ–Ω—å–∏—Ö —á–µ—à—É–µ–∫!')
time.sleep(1)

print('\n–ß—Ç–æ –≤—ã –≤—ã–±–µ—Ä–∏—Ç–µ?')
print('1. –ó–∞–≥–ª—è–Ω—É—Ç—å –≤ –µ–≥–æ –ª–∞–≤–∫—É.')
print('2. –ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å —Å–≤–æ–µ –ø—É—Ç–µ—à–µ—Å—Ç–≤–∏–µ.')
print(f'(–í–∞—à –±–∞–ª–∞–Ω—Å - {knight.balance})')
d1 = int(input('–ù–∞–ø–∏—à–∏—Ç–µ —á–∏—Å–ª–æ: '))

if d1 == 1:
    print('\n–¢–æ—Ä–≥–æ–≤–µ—Ü –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç —Å–≤–æ–∏ —Ç–æ–≤–∞—Ä—ã.')
    print('1. –ó–µ–ª—å–µ –∑–¥–æ—Ä–æ–≤—å—è - 90 –º–æ–Ω–µ—Ç\n2. –ó–µ–ª—å–µ —Å–∏–ª—ã - 100 –º–æ–Ω–µ—Ç\n3. –ë—É–ª–∫–∞ —Ö–ª–µ–±–∞ - 20 –º–æ–Ω–µ—Ç\n4.–û–∫–æ—Ä–æ—á–µ–∫ - 30 –º–æ–Ω–µ—Ç\n')
    d2 = int(input('–í—ã–±–µ—Ä–∏—Ç–µ —Ç–æ–≤–∞—Ä –∏–ª–∏ –Ω–∞–∂–º–∏—Ç–µ –ª—é–±—É—é –¥—Ä—É–≥—É—é –∫–Ω–æ–ø–∫—É, —á—Ç–æ–±—ã –Ω–∏—á–µ–≥–æ –Ω–µ –±—Ä–∞—Ç—å: '))
    if d2 == 1:
        if knight.balance >= 90:
            knight.bag.append('–∑–µ–ª—å–µ –∑–¥–æ—Ä–æ–≤—å—è')
            knight.balance -= 90
        else:
            print('–£ –≤–∞—Å –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –¥–µ–Ω–µ–≥.')
    
    elif d2 == 2:
        if knight.balance >= 100:
            knight.bag.append('–∑–µ–ª—å–µ —Å–∏–ª—ã')
            knight.balance -= 100
        else:
            print('–£ –≤–∞—Å –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –¥–µ–Ω–µ–≥.')
    
    elif d2 == 3:
        if knight.balance >= 20:
            knight.bag.append('–±—É–ª–∫–∞ —Ö–ª–µ–±–∞')
            knight.balance -= 20
        else:
            print('–£ –≤–∞—Å –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –¥–µ–Ω–µ–≥.')
    
    elif d2 == 4:
        if knight.balance >= 30:
            knight.bag.append('–æ–∫–æ—Ä–æ—á–µ–∫')
            knight.balance -= 30
        else:
            print('–£ –≤–∞—Å –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ –¥–µ–Ω–µ–≥.')
    
    
