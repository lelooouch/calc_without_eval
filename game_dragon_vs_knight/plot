time.sleep(1)
print('–ù–æ –≤—ã –∑–∞–º–µ—á–∞–µ—Ç–µ —á—Ç–æ-—Ç–æ —Å—Ç—Ä–∞–Ω–Ω–æ–µ –≤ —É–≥–ª—É —Ç–æ–Ω–Ω–µ–ª—è ‚Äî –ø—Ä–∏–≥–ª—É—à—ë–Ω–Ω–æ–µ –º–µ—Ä—Ü–∞–Ω–∏–µ.')
time.sleep(1)
print('‚Äî –ü–æ–¥–æ–∂–¥–∏! ‚Äî –≥–æ–≤–æ—Ä–∏—Ç–µ –≤—ã.')
time.sleep(1)
print('–í—ã –ø–æ–¥—Ö–æ–¥–∏—Ç–µ –±–ª–∏–∂–µ –∏ –≤–∏–¥–∏—Ç–µ: –≤ –Ω–∏—à–µ —Å—Ç–µ–Ω—ã —Å—Ç–æ–∏—Ç —Å—Ç–∞—Ä–∏–Ω–Ω—ã–π –∂–µ–ª–µ–∑–Ω—ã–π —Å—É–Ω–¥—É–∫.')
print('–ù–∞ –∫—Ä—ã—à–∫–µ –≤—ã–≥—Ä–∞–≤–∏—Ä–æ–≤–∞–Ω –¥—Ä–µ–≤–Ω–∏–π —Å–∏–º–≤–æ–ª ‚Äî –≥–ª–∞–∑ –≤ —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–µ, –æ–∫—Ä—É–∂—ë–Ω–Ω—ã–π —Ä—É–Ω–∞–º–∏.')
print()
time.sleep(1)
# –≤—Ç–æ—Ä–æ–π –≤—ã–±–æ—Ä

print('–ß—Ç–æ –≤—ã –¥–µ–ª–∞–µ—Ç–µ?')
print('1. –û—Ç–∫—Ä—ã—Ç—å —Å—É–Ω–¥—É–∫')
print('2. –û—Å—Ç–∞–≤–∏—Ç—å –µ–≥–æ ‚Äî —ç—Ç–æ –º–æ–∂–µ—Ç –±—ã—Ç—å –ª–æ–≤—É—à–∫–∞')

d1 = int(input('–ù–∞–ø–∏—à–∏—Ç–µ —á–∏—Å–ª–æ: '))
while d1 not in [1, 2]:
    d1 = int(input('–í—ã–±–µ—Ä–∏—Ç–µ —á–∏—Å–ª–æ –æ—Ç 1 –¥–æ 3: '))
if d1 == 1:
    knight.open_chest('–£—á–µ–Ω–∏–∫')

